---
import { Sprite } from "astro-icon"
import type { Item } from "~/lib/data"
import Tag from "./Tag.astro"

type Props = {
  item: Item
}

const { item } = Astro.props
const indicatorLabel = "New item"
---

<article id={item.slug} class="space-y-4">
  <a href={`#${item.slug}`} class="flex gap-x-4">
    <h4
      class="flex-1 text-[12vw] font-bold leading-none text-white xs:text-6xl"
    >
      {item.name}
    </h4>
    <Sprite
      class="invisible h-5 w-5 flex-none self-center"
      name="star"
      title={indicatorLabel}
      aria-label={indicatorLabel}
    />
  </a>
  <ul class="flex flex-wrap items-center gap-2">
    {
      item.tags.map((tag) => (
        <li>
          <Tag tag={tag} />
        </li>
      ))
    }
  </ul>
</article>

<script>
  import "~/lib/viewed-items"
</script>
