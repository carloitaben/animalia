---
import type { Item } from "~/lib/data"
import Tag from "./Tag.astro"

type Props = {
  item: Item
}

const { item } = Astro.props
---

<article id={item.slug}>
  <article>
    <div>
      <a href={`#${item.slug}`}>
        <h4>{item.name}</h4>
      </a>
      <span>â˜…</span>
    </div>
    <ul class="flex items-center gap-2 flex-wrap">
      {
        item.tags.map((tag) => (
          <li>
            <Tag tag={tag} />
          </li>
        ))
      }
    </ul>
  </article>
</article>
