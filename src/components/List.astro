---
import type { Item, Tag } from "~/lib/data"
import ListItem from "./ListItem.astro"

type Props = {
  items: Item[]
  tag?: Tag
}

const { items, tag } = Astro.props
---

<section>
  <ul class="mx-auto w-full max-w-3xl divide-y divide-current px-5 xs:px-8">
    {
      items.map((item) => (
        <li class="pt-4 pb-8">
          <ListItem item={item} tag={tag} />
        </li>
      ))
    }
  </ul>
</section>
